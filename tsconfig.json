{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "esnext",
    "lib": ["esnext"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["src/*"]
    },
    "esModuleInterop": true,
    "outDir": "./build"
  },
  "include": ["src/**/*"]
}